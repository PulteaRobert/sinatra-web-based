<link rel="stylesheet" href="style/common.css">

<% if @user.nil? %>

     <p class="error"><strong>Unknown account</strong></p>
<% else %>

    <% unless @user.errors.size.zero? %>
        <p><strong class="error">Please correct the errors below:</strong></p>
    <% end %> 

  <form method="post">
        <input type="hidden" name="id" value="<%= @user.id %>" />
        <%= erb :"common/register_form" %>
    </form>

  <div class="warning">
        <p><strong>WARNING! Deleting the account cannot be undone.</strong></p>

        <form method="post" action="/delete">
            <input type="hidden" name="id" value="<%= @user.id %>" />
            <input type="submit" value="Delete" onclick="return confirm('Are you sure?')" />
        </form>
  </div>

<% end %>

